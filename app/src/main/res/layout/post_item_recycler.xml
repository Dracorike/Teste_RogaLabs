<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin_recyclerview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textv_title"
            android:layout_width="@dimen/post_title_limite_width"
            android:layout_height="wrap_content"
            tools:text="@string/title_tool"
            android:layout_margin="@dimen/margin_text_recyclerview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/textv_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/body_tool"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/text_body_size"
            android:layout_marginBottom="@dimen/margin_text_recyclerview"
            app:layout_constraintStart_toStartOf="@id/textv_title"
            app:layout_constraintTop_toBottomOf="@id/textv_title"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>